inherit  perl--modules
   VERSION=( "5.31" )
    SOURCE="M/MS/MSHELOR/Digest-SHA-$VERSION.tar.gz"
  HOMEPAGE="$HOMEPAGE/search?dist=Digest-SHA"
       REQ=( "perl"
             ":-t:: to build a thread-safe version of the module"
             ":-x:: to exclude support for SHA-384/512"
	   )
  ESTIMATE="21"
      DESC="$SPELL is a complete implementation of the NIST Secure Hash Standard
It gives Perl programmers a convenient way to calculate
SHA-1, SHA-224, SHA-256, SHA-384, and SHA-512 message digests.
The module can handle all types of input, including partial-byte
data.
"

build() {
  perl_module_build  $OPTS
}
