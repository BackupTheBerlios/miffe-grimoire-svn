    VERSION=( "4.2r1" )
   CATEGORY="data science library"
  ATTRIBUTE="new library"
     SOURCE="HDF${VERSION}.tar.gz"
   HOMEPAGE="http://www.hdfgroup.org"
        URL="ftp://ftp.hdfgroup.org/HDF/HDF_Current/src/"
	REQ="zlib szip jpeg"
       OPTS="--disable-fortran"
   ESTIMATE="1184"
       DESC="hdf4 is a library for the Hierarchical Data Format 4 (HDF4)."

function build() {

 # To avoid clashes with netcdf use -DHAVE_NETCDF
 CFLAGS="$CFLAGS -DHAVE_NETCDF"
 CXXFLAGS="$CXXFLAGS -DHAVE_NETCDF"

 ./configure  --build=$BUILD		\
              --prefix=/usr		\
	      --sysconfdir=/etc		\
              --localstatedir=/var	\
              --with-szlib		\
              $OPTS			&&
 make					&&
# make  check				&&
 prepare_install			&&
 make  install
}
