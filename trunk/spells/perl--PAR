inherit  perl--modules
   VERSION=( "0.89" )
    SOURCE="A/AU/AUTRIJUS/PAR-$VERSION.tar.gz"
  HOMEPAGE="$HOMEPAGE/search?dist=PAR"
       REQ=( "perl perl--File-Temp perl--Compress-Zlib perl--Archive-Zip perl--PAR-Dist perl--Digest-SHA perl--Module-Signature" )
  ESTIMATE="66"
      DESC="$SPELL provides the Perl Archive Toolkit
This module lets you easily bundle a typical blib/ tree
into a zip file, called a Perl Archive, or PAR. The 
bundled utility pp enables creating executables that
contain all module, script and data files."


build() {
  case "$VERSION" in
	0.89)	cd myldr
		perl  sha1.c.PL sha1.c
		cd -	;;
  esac

  perl_module_build
}
