 VERSION=( "0.4.0" "0.3.6" )
CATEGORY="development"
     URL="http://zoinks.mikelockwood.com/"
  SOURCE="download/$SPELL-$VERSION.tar.gz"
HOMEPAGE="http://zoinks.mikelockwood.com/"
ESTIMATE="564"
     REQ=( "" 
           "gettext::--disable-nls:For GNU native language support"
         )
FRESHMEAT="zoinks"
    DESC="zoinks is a programmer's text editor and IDE"

function build() {
  ./configure --disable-imlib            \
              --prefix=/usr              &&
  make                                   &&
  prepare_install                        &&
  make install
}
