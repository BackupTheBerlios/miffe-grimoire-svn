inherit  perl--modules
   VERSION=( "0.67" "0.66.1" "0.60a" )
    SOURCE="/B/BY/BYRNE/SOAP/${SPELL#perl--}-$VERSION.tar.gz"
  HOMEPAGE="$HOMEPAGE/search?dist=SOAP-Lite"
       REQ=( "perl perl--XML-Parser"
          "perl--Crypt-SSLeay:::for LWP https support"
          "perl--IO-Socket-SSL:::for interface to SSL sockets"
          "perl--libwww:::for aplication programming interface to WWW"
          "perl--MIME-Base64:::for encoding and decoding of base64 strings"
          "perl--URI:::for Uniform Resource Identifiers"
	  )
  ESTIMATE="97"
      DESC="$SPELL is a collection of Perl modules providing interface to the SOAP
(Simple Object Access Protocol) both on client and server side.
"

build() {
  true  |  perl_module_build
}
